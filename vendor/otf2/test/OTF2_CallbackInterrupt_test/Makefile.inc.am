    $(SRC_ROOT)test/OTF2_CallbackInterrupt_test/run_otf2_callback_interrupt_test.sh \
    $(SRC_ROOT)test/OTF2_CallbackInterrupt_test/run_otf2_callback_interrupt_test_sion.sh
