check_PROGRAMS += OTF2_UnknownRecord_test

OTF2_UnknownRecord_test_SOURCES = \
    $(SRC_ROOT)test/OTF2_UnknownRecord_test/OTF2_UnknownRecord_test.c

OTF2_UnknownRecord_test_CPPFLAGS = \
    $(AM_CPPFLAGS) \
    -I$(INC_ROOT)src \
    -I$(INC_ROOT)test/include \
    $(UTILS_CPPFLAGS)

OTF2_UnknownRecord_test_LDADD = libotf2.la

OTF2_UnknownRecord_test_CFLAGS = $(AM_CFLAGS)
OTF2_UnknownRecord_test_LDFLAGS = $(AM_LDFLAGS) $(LINKMODE_FLAGS)
if HAVE_PTHREAD
OTF2_UnknownRecord_test_CFLAGS += \
    $(PTHREAD_CFLAGS)
OTF2_UnknownRecord_test_LDFLAGS += \
    $(PTHREAD_CFLAGS)
OTF2_UnknownRecord_test_LDADD += \
    $(PTHREAD_LIBS)
endif

SCOREP_TESTS += \
    $(SRC_ROOT)test/OTF2_UnknownRecord_test/run_otf2_unknown_record_test.sh

if HAVE_SIONLIB_SUPPORT
SCOREP_TESTS += \
    $(SRC_ROOT)test/OTF2_UnknownRecord_test/run_otf2_unknown_record_test_sion.sh
endif

EXTRA_DIST += \
    $(SRC_ROOT)test/OTF2_UnknownRecord_test/run_otf2_unknown_record_test.sh \
    $(SRC_ROOT)test/OTF2_UnknownRecord_test/run_otf2_unknown_record_test_sion.sh
