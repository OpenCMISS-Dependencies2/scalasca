libscout_common_la_CPPFLAGS = \
    $(AM_CPPFLAGS) \
    -I$(PUBLIC_INC_DIR) \
    -I$(INC_DIR_COMMON_UTILS) \
    -I$(INC_ROOT)src/pearl/thread \
    $(CUBE_WRITER_CPPFLAGS)


##--- Programs --------------------------------------------------------------

