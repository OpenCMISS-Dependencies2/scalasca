scout_ser_CPPFLAGS = \
    $(AM_CPPFLAGS) \
    -DPKGDATADIR=\"$(pkgdatadir)\" \
    -I$(PUBLIC_INC_DIR) \
    -I$(INC_DIR_COMMON_UTILS) \
