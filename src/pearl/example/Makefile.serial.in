prefix      = @prefix@
exec_prefix = @exec_prefix@
libdir      = @libdir@
incdir      = @includedir@

CXX         = @CXX@
CPPFLAGS    = -I$(incdir)
CXXFLAGS    =
LDFLAGS     = -L$(libdir)
OTF2_LIBS   = `otf2-config --libs`
LDADD       = -lpearl.replay -lpearl.base -lpearl.thread.ser $(OTF2_LIBS)


all: pearl_print.ser

clean:
	rm -f pearl_print.ser


pearl_print.ser: pearl_print.cpp
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) -o $@ $< $(LDFLAGS) $(LDADD)
